<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#999999"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/shape_white_with_stroke"
        android:orientation="vertical">

        <TextView
            android:layout_margin="5dp"
            android:id="@+id/tv_result"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right|bottom"
            android:scrollbars="vertical"
            android:textColor="#000000"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                style="@style/btn_cal"
                android:id="@+id/bn_10"
                android:text="C" />

            <Button
                android:id="@+id/bn_11"
                style="@style/btn_cal"
                android:text="←" />

            <Button
                android:id="@+id/bn_12"
                style="@style/btn_cal"
                android:text="%" />

            <Button
                android:id="@+id/bn_13"
                style="@style/btn_cal"
                android:text="÷" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/bn_7"
                style="@style/btn_cal"
                android:text="7" />

            <Button
                android:id="@+id/bn_8"
                style="@style/btn_cal"
                android:text="8" />

            <Button
                android:id="@+id/bn_9"
                style="@style/btn_cal"
                android:text="9" />

            <Button
                android:id="@+id/bn_14"
                style="@style/btn_cal"
                android:text="×" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/bn_4"
                style="@style/btn_cal"
                android:text="4" />

            <Button
                android:id="@+id/bn_5"
                style="@style/btn_cal"
                android:text="5" />

            <Button
                android:id="@+id/bn_6"
                style="@style/btn_cal"
                android:text="6" />

            <Button
                android:id="@+id/bn_15"
                style="@style/btn_cal"
                android:text="-" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/bn_1"
                style="@style/btn_cal"
                android:text="1" />

            <Button
                android:id="@+id/bn_2"
                style="@style/btn_cal"
                android:text="2" />

            <Button
                android:id="@+id/bn_3"
                style="@style/btn_cal"
                android:text="3" />

            <Button
                android:id="@+id/bn_16"
                style="@style/btn_cal"
                android:text="+" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/bn_0"
                style="@style/btn_cal"
                android:layout_weight="2"
                android:text="0" />

            <Button
                android:id="@+id/bn_18"
                style="@style/btn_cal"
                android:text="." />

            <Button
                android:id="@+id/bn_17"
                style="@style/btn_cal"
                android:text="=" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>